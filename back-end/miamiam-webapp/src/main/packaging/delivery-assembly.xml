<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<includeBaseDirectory>false</includeBaseDirectory>
	<id>delivery</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<!-- Binairies -->
		<fileSet>
			<directory>${project.basedir}/../miamiam-webapp/target</directory>
			<outputDirectory>/binaries</outputDirectory>
			<includes>
				<include>*.ear</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../miamiam-webapp/src/main/resources/external</directory>
			<outputDirectory>/binaries/Web/config</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		
		<!-- Sources -->
		<fileSet>
			<directory>${project.basedir}/../../web</directory>
			<outputDirectory>/sources/web</outputDirectory>
			<excludes>
				<exclude>**/target/</exclude>
				<exclude>**/.settings/</exclude>
				<exclude>**/.svn/</exclude>
				<exclude>**/.project</exclude>
				<exclude>**/.classpath</exclude>
				<exclude>**/RemoteSystemsTempFiles</exclude>
				<exclude>**/Servers/</exclude>
				<exclude>**/.metadata</exclude>
				<exclude>**/.pmd</exclude>
				<exclude>**/.checkstyle</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../../mobile</directory>
			<outputDirectory>/sources/mobile</outputDirectory>
			<excludes>
				<exclude>**/target/</exclude>
				<exclude>**/.settings/</exclude>
				<exclude>**/.svn/</exclude>
				<exclude>**/.project</exclude>
				<exclude>**/.classpath</exclude>
				<exclude>**/RemoteSystemsTempFiles</exclude>
				<exclude>**/Servers/</exclude>
				<exclude>**/.metadata</exclude>
				<exclude>**/.pmd</exclude>
				<exclude>**/.checkstyle</exclude>
			</excludes>
		</fileSet>
		
		<!-- Javadocs -->
		<fileSet>
			<directory>${project.basedir}/../miamiam-webapp/target/javadocs</directory>
			<outputDirectory>/javadocs/miamiam-webapp</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../miamiam-service/target/javadocs</directory>
			<outputDirectory>/javadocs/miamiam-service</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>

